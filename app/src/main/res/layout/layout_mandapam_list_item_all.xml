<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/lrtbp_10"
        app:cardBackgroundColor="@color/colorTextBg"
        app:cardCornerRadius="@dimen/lrtbp_10"
        app:cardElevation="@dimen/lrtbp_5">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/wh_2"
            app:cardBackgroundColor="@color/colorTextBg"
            app:cardCornerRadius="@dimen/lrtbp_10">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/wh_120">

                    <ImageView
                        android:id="@+id/imageMandapam"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/wh_120"
                        android:scaleType="fitXY"
                        android:src="@drawable/mandapamsample" />

                    <TextView
                        android:id="@+id/textImageCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentBottom="true"
                        android:background="#80000000"
                        android:padding="@dimen/wh_2"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="@color/colorWhite"/>

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/lrtbp_5"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textMandapamName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:maxLines="2"
                        android:ellipsize="end"
                        android:textColor="@color/black"
                        android:text="எஸ்.வி.வி. கல்யாண மண்டபம்"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textStyle="bold" />

                    <TextView
                        android:visibility="gone"
                        android:id="@+id/textMandapamContactName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Dineshkumar"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:textColor="@color/black"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textStyle="bold" />

                    <TextView
                        android:visibility="gone"
                        android:id="@+id/textMandapamContactNum"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="9942385589"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:textColor="@color/black"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textMandapamContactTaluk"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Tiruchengode"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:textColor="@color/black"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textMandapamContactDistrict"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Namakkal"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:textColor="@color/black"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textStyle="bold" />

                </LinearLayout>

                <TextView
                    android:id="@+id/more_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:background="@drawable/bg_style_upgrade"
                    android:paddingLeft="@dimen/lrtbp_5"
                    android:paddingRight="@dimen/lrtbp_5"
                    android:paddingTop="@dimen/wh_2"
                    android:paddingBottom="@dimen/wh_2"
                    android:text="மேலும் பார்க்க..."
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/colorTextLine" />

                <LinearLayout
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_weight="1"
                        android:background="#009732"
                        android:orientation="horizontal"
                        android:padding="@dimen/lrtbp_5">

                        <ImageView
                            android:layout_width="@dimen/lrtbp_25"
                            android:layout_height="@dimen/lrtbp_25"
                            android:layout_marginLeft="@dimen/lrtbp_25"
                            android:gravity="center"
                            android:src="@drawable/icon_share" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/lrtbp_5"
                            android:gravity="center"
                            android:text="SHARE"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textColor="@color/colorWhite" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layoutCall"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:background="#fd6500"
                        android:padding="@dimen/lrtbp_5">

                        <ImageView
                            android:layout_width="@dimen/lrtbp_25"
                            android:layout_height="@dimen/lrtbp_25"
                            android:layout_marginLeft="@dimen/lrtbp_25"
                            android:gravity="center"
                            android:src="@drawable/icon_call" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/lrtbp_5"
                            android:gravity="center"
                            android:text="CALL"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textColor="@color/colorWhite" />

                    </LinearLayout>


                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </androidx.cardview.widget.CardView>

</RelativeLayout>
