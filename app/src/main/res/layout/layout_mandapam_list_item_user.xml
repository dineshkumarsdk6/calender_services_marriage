<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/wh_15"
        app:cardBackgroundColor="@color/colorTextBg"
        app:cardCornerRadius="@dimen/lrtbp_10"
        app:cardElevation="@dimen/lrtbp_5">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/wh_2"
            app:cardBackgroundColor="@color/colorTextBg"
            app:cardCornerRadius="@dimen/lrtbp_10">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/wh_120">

                    <ImageView
                        android:id="@+id/imageMandapam"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/wh_120"
                        android:scaleType="fitXY"
                        android:src="@drawable/mandapamsample" />

                    <TextView
                        android:id="@+id/textImageCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentBottom="true"
                        android:background="#80000000"
                        android:padding="@dimen/wh_2"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="@color/colorWhite"/>

                    <TextView
                        android:id="@+id/text_live"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:background="@drawable/bg_style_live"
                        android:paddingLeft="@dimen/lrtbp_10"
                        android:paddingRight="@dimen/lrtbp_5"
                        android:paddingTop="@dimen/wh_2"
                        android:paddingBottom="@dimen/wh_2"
                        android:text="Invoice"
                        android:textAllCaps="true"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="#32925a" />

                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/layout_dnd"
                    android:layout_gravity="right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/textDnd"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxLines="2"
                        android:ellipsize="end"
                        android:textColor="@color/colorTextLine"
                        android:text="do not disturb"
                        android:layout_gravity="center_vertical"
                        android:textAllCaps="true"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textStyle="bold" />

                    <Switch
                        android:id="@+id/switch_dnd"
                        android:layout_gravity="center_vertical"
                        android:trackTint="@color/colorTextLine"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/lrtbp_5"
                        android:checked="true" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/lrtbp_10"
                    android:layout_marginRight="@dimen/lrtbp_10"
                    android:layout_marginBottom="@dimen/lrtbp_5"
                    android:layout_marginTop="@dimen/lrtbp_5"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textMandapamName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:maxLines="2"
                        android:ellipsize="end"
                        android:textColor="@color/black"
                        android:text="எஸ்.வி.வி. கல்யாண மண்டபம்"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textStyle="bold" />

                    <TextView
                        android:visibility="gone"
                        android:id="@+id/textMandapamContactName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Dineshkumar"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:textColor="@color/black"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textStyle="bold" />

                    <TextView
                        android:visibility="gone"
                        android:id="@+id/textMandapamContactNum"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="9942385589"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:textColor="@color/black"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textMandapamContactTaluk"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Tiruchengode"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:textColor="@color/black"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textMandapamContactDistrict"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Namakkal"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:textColor="@color/black"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/card_live"
                        android:visibility="gone"
                        android:layout_gravity="center"
                        android:layout_width="@dimen/wh_80_1"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/lrtbp_10"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?selectableItemBackground"
                        android:gravity="center"
                        app:cardBackgroundColor="#b9dabe"
                        app:cardCornerRadius="@dimen/lrtbp_15">

                        <LinearLayout
                            android:id="@+id/layout_live"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:padding="@dimen/lrtbp_5"
                            android:layout_gravity="center"
                            android:background="@drawable/bg_style_live"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/image_live"
                                android:visibility="visible"
                                android:layout_width="@dimen/lrtbp_10"
                                android:layout_height="@dimen/lrtbp_15"
                                android:layout_gravity="center_vertical"
                                android:src="@drawable/icon_dot" />

                            <TextView
                                android:layout_toRightOf="@+id/image_live"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAllCaps="true"
                                android:layout_marginLeft="@dimen/lrtbp_5"
                                android:padding="@dimen/wh_2"
                                android:layout_gravity="center_vertical"
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:textColor="#32925a" />

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/card_upgrade"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/lrtbp_5"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?selectableItemBackground"
                        android:gravity="center"
                        app:cardBackgroundColor="#fde9f4"
                        app:cardCornerRadius="@dimen/lrtbp_15">

                        <LinearLayout
                            android:id="@+id/layout_upgrade"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:background="@drawable/bg_style_upgrade"
                            android:padding="@dimen/lrtbp_5"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/image_upgrade"
                                android:visibility="gone"
                                android:layout_width="@dimen/lrtbp_10"
                                android:layout_height="@dimen/lrtbp_15"
                                android:layout_gravity="center_vertical"
                                android:src="@drawable/icon_dot" />

                            <TextView
                                android:id="@+id/text_upgrade"
                                android:layout_toRightOf="@+id/image_live"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingLeft="@dimen/lrtbp_5"
                                android:paddingRight="@dimen/lrtbp_5"
                                android:paddingBottom="@dimen/wh_2"
                                android:paddingTop="@dimen/wh_2"
                                android:textAllCaps="true"
                                android:text="UPGRADE"
                                android:layout_gravity="center_vertical"
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:textColor="@color/colorTextLine" />

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>


                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </androidx.cardview.widget.CardView>

</RelativeLayout>
