<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="@dimen/lrtbp_5"
        card_view:cardBackgroundColor="#fff">

        <FrameLayout
            android:id="@+id/sharemainlayy1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/colorWhite"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:id="@+id/layout_bg"
                            android:layout_width="@dimen/wh_35"
                            android:layout_height="match_parent"
                            android:background="@drawable/bg_insta"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/image_bg"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/lrtbp_25"
                                android:layout_gravity="center"
                                android:src="@drawable/icon_insta" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/text_bg"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/lrtbp_10"
                                android:gravity="left|center"
                                android:padding="@dimen/lrtbp_5"
                                android:text="Enter Your Instagarm Link"
                                android:textColor="@color/black"
                                android:textSize="16sp"
                                android:textStyle="bold" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="@dimen/lrtbp_5"
                            android:layout_height="match_parent"
                            android:background="@color/colorInsta1"
                            android:orientation="horizontal">

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/lrtbp_10"
                        android:layout_marginLeft="@dimen/lrtbp_10"
                        android:layout_marginRight="@dimen/lrtbp_10"
                        android:background="#FAFAFA"
                        android:orientation="horizontal">

                        <androidx.appcompat.widget.AppCompatEditText
                            android:id="@+id/editTextLink"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/wh_150"
                            android:backgroundTint="@color/colorWhite"
                            android:gravity="left|top"
                            android:importantForAutofill="no"
                            android:inputType="textMultiLine"
                            android:maxLength="500"
                            android:textColor="#000000" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginLeft="@dimen/lrtbp_10"
                        android:layout_marginRight="@dimen/lrtbp_10"
                        android:layout_marginBottom="@dimen/lrtbp_15"
                        android:background="#EB226C"
                        android:orientation="horizontal" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:padding="@dimen/lrtbp_10">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/ok_card"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="@dimen/lrtbp_10"
                            android:layout_marginRight="@dimen/lrtbp_10"
                            android:layout_weight="0.33"
                            app:cardCornerRadius="@dimen/lrtbp_5"
                            card_view:cardBackgroundColor="#408010">

                            <androidx.appcompat.widget.AppCompatButton
                                android:id="@+id/btnSend"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@android:color/transparent"
                                android:padding="@dimen/lrtbp_5"
                                android:text="சரி"
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:textColor="#fff"
                                android:textStyle="bold" />
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:id="@+id/cancel_card"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="@dimen/lrtbp_10"
                            android:layout_marginRight="@dimen/lrtbp_10"
                            android:layout_weight="0.33"
                            android:visibility="gone"
                            app:cardCornerRadius="@dimen/lrtbp_5"
                            card_view:cardBackgroundColor="#408010">

                            <androidx.appcompat.widget.AppCompatButton
                                android:id="@+id/btncancel"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@android:color/transparent"
                                android:padding="@dimen/lrtbp_5"
                                android:text="சரி"
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:textColor="#fff"
                                android:textStyle="bold" />
                        </androidx.cardview.widget.CardView>


                    </LinearLayout>
                </LinearLayout>
            </ScrollView>
        </FrameLayout>
    </androidx.cardview.widget.CardView>

