<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:id="@+id/txtfd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/lrtbp_5"
        android:background="#ED2F59"
        android:text="நித்ரா தமிழ் நாட்காட்டி"
        android:gravity="center"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#fff"
        android:textStyle="italic|bold"
         />

    <TextView
        android:id="@+id/txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:padding="@dimen/lrtbp_10"
        android:text="நாட்காட்டியை பகிர பின் வரும் அனுமதிகளை அனுமதிக்கவும்"
        android:gravity="center"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#B40486"
        android:textStyle="italic|bold"
        android:lineSpacingExtra="5dp"/>
    <TextView
        android:id="@+id/star_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:textColor="@android:color/holo_red_dark"/>

    <View
        android:layout_width="300dp"
        android:layout_height="1dp"
        android:background="#07000000"/>

    <TextView
        android:id="@+id/permission_ok"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="சரி"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:background="#fff"/>
    <LinearLayout
        android:id="@+id/but_lay"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:visibility="gone"
        android:gravity="center"
        android:background="#fff">
        <Button
            android:id="@+id/permission_ok1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/lrtbp_5"
            android:text="சரி"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#fff"
            android:layout_gravity="center"/>
    </LinearLayout>

</LinearLayout>